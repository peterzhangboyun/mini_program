/* pages/课程/课程.wxss */
page{
  background-color: #f5f5f5;
}
.container{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.doc-container{
  overflow: hidden;
  min-height: 100vh;
  box-sizing: border-box;
}
.doc-title{
  font-weight: bold;
  position: relative;
  margin: 10px 15px;
  line-height: 25px;
  color: #171718;
}



.list{
  margin: 10px 15px;
  border: 3px solid #d8d8d8;
  border-radius: 10px;
  background-color: #0178ff;
  padding: 20px;
  height: 20px;
  text-align: left;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.list_preinfo{
  color: #cecece;
  font-size: 11px;
}
.Text{
  font-weight: bold;
  color: white;
  display: block;
  font-size: 20px
}
.list_tag{
  display: inline;
  padding: 0.1em 0.3em 0.1em 0.3em;
  margin-right: 3px;
  font-size: 11px;
  line-height: 1;
  text-align: center;
  white-space: nowrap;
  vertical-align: baseline;
  border-radius: 0.25em;
  color: #626262;
  font-weight: normal;
}